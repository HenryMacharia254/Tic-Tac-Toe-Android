<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 1:0"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:freezesText="true"/>

    <TextView
        android:id="@+id/tv_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 2:0"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintEnd_toEndOf="@+id/tv_p1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p1" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@+id/tv_p2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_p2"
        app:layout_constraintTop_toTopOf="@+id/tv_p1" />

    <Button
        android:id="@+id/btn_00"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_10"
        app:layout_constraintEnd_toStartOf="@+id/btn_01"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_p2" />

    <Button
        android:id="@+id/btn_01"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_00"
        app:layout_constraintEnd_toStartOf="@+id/btn_02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_00"
        app:layout_constraintTop_toTopOf="@+id/btn_00" />

    <Button
        android:id="@+id/btn_02"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_01"
        app:layout_constraintTop_toTopOf="@+id/btn_01" />

    <Button
        android:id="@+id/btn_10"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_20"
        app:layout_constraintEnd_toStartOf="@+id/btn_11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_00" />

    <Button
        android:id="@+id/btn_11"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_10"
        app:layout_constraintEnd_toStartOf="@+id/btn_12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_10"
        app:layout_constraintTop_toTopOf="@+id/btn_10" />

    <Button
        android:id="@+id/btn_12"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_11"
        app:layout_constraintTop_toTopOf="@+id/btn_11" />

    <Button
        android:id="@+id/btn_20"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_10" />

    <Button
        android:id="@+id/btn_21"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_20"
        app:layout_constraintEnd_toStartOf="@+id/btn_22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_20"
        app:layout_constraintTop_toTopOf="@+id/btn_20" />

    <Button
        android:id="@+id/btn_22"
        style="@style/GameButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="@+id/btn_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_21"
        app:layout_constraintTop_toTopOf="@+id/btn_21" />

</androidx.constraintlayout.widget.ConstraintLayout>